model ProductImage {
  id        String  @id @default(cuid())
  url       String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model PricingTier {
  id          String  @id @default(cuid())
  minQuantity Int
  price       Decimal
  productId   String
  product     Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// Order system replaces Inquiry


model Order {
  id              String      @id @default(cuid())
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  // User relation (optional for guest checkout if we allowed it, but req says account)
  userId          String?
  user            User?       @relation(fields: [userId], references: [id])
  
  // Contact & Shipping Info (Snapshot)
  email           String
  phone           String
  fullName        String
  addressLine1    String      // Street or Parcel Locker ID
  addressLine2    String?
  city            String
  postalCode      String
  country         String      @default("PL")
  shippingMethod  String      // COURIER, LOCKER
  
  // Financials
  subtotal        Decimal
  shippingCost    Decimal
  total           Decimal
  
  // Statuses
  status          String      @default("PENDING") // PENDING, PAID, SHIPPED, CANCELLED
  paymentMethod   String      // PAYPAL, BLIK
  paymentStatus   String      @default("UNPAID")  // UNPAID, PAID
  
  trackingNumber  String?
  notes           String?     // Custom order notes from user
  
  items           OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  
  quantity  Int
  price     Decimal // Snapshot price at time of order
  name      String  // Snapshot name
  customDimensions String? // For custom size requests
  customImageUrl   String? // For custom graphics
}

model Settings {
  id                  String  @id @default(cuid())
  shippingCost        Decimal @default(10.99)
  freeShippingThreshold Decimal @default(200.00)
}
